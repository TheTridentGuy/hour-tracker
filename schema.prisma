generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = "5"
  interface            = "sync"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  slack_id         String    @id
  signed_in        Boolean   @default(false)
  signin_time      DateTime?
  last_special_day DateTime?
  fall_total_hours      Float     @default(0)
  spring_total_hours      Float     @default(0)
  wednesdays       Int       @default(0)
  fridays          Int       @default(0)
}
